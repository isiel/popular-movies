<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_detail"
    tools:context="siel.ignacio.popularmovies.fragments.DetailActivityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/movie_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textSize="35sp"
            android:padding="20dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_poster_imageview"
            android:layout_margin="15dp"
            android:layout_below="@+id/movie_title_textview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/movie_release_date_textview"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignTop="@+id/movie_poster_imageview"
            android:layout_toRightOf="@+id/movie_poster_imageview"
            android:layout_toEndOf="@+id/movie_poster_imageview" />

        <TextView
            android:id="@+id/movie_rating_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_below="@+id/movie_release_date_textview"
            android:layout_toRightOf="@+id/movie_poster_imageview"
            android:layout_toEndOf="@+id/movie_poster_imageview" />

        <TextView
            android:id="@+id/movie_plot_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_poster_imageview"
            android:layout_alignLeft="@+id/movie_poster_imageview"
            android:layout_alignStart="@+id/movie_poster_imageview" />

    </RelativeLayout>

</ScrollView>

